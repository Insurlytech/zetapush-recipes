macroscript core_user__getUserByLoginAndService(
	@NotNull string login,
	@NotNull service<simple> zpService
	
) {
	const fields = zpService.checkUser({
		key: login,
		softFail: true
	});
	const user = new User(
		fields.zetapushKey,
		fields.login,
		fields.email,
		fields.firstname,
		fields.lastname,
		fields.mobilenumber,
		fields.phonenumber,
		fields.birthday,
		fields.avatar,
		fields.biography
	);
} return user on channel __selfName
