/**
 * Get user profile according to the login use to connect the user
 * <strong>Login is not the user key of the user</strong>
 */
macroscript getUserByLogin(
	/** User login */ @NotNull string login
) {
	const response = await core_user__getUserByLoginAndService({
		login,
		zpService: zpServiceSimpleAuth
	});

	assert response.user.userKey != null "USER_NOT_FOUND";
	
} return response on channel __selfName
