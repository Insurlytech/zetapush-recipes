macroscript resetUserPassword(
	string userKey
) {
	trace(resetUserPassword.name, userKey);
	/** Get user by login */
	const { user } = await getUser({ userKey });
//	assert user?? && user.userKey?? ERROR__USER_NOT_FOUND;

	if(user ??){
		/** Reset user password */
		sudo user.userKey await core_user__resetUserPasswordByService({
			user,
			zpService: zpServiceSimpleAuth
		});
	}
	else {
		user = null;
	}
	
} broadcast {} on channel __selfName
