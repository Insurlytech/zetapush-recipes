macroscript addRoleMember(
	/** Role name */ @NotNull string name,
	/** User key */ @NotNull string member
) {
	var id = str:hex(str:md5(str:upper(name)));
	/** Add user in group */
	var response = sudo zpRecipeUtils::GLOBAL_OWNER call zpRecipeGroup::core_group__addGroupMemberByService({
		id,
		member,
		zpService: zpServiceGroupsRole
	}) hardFail;
} broadcast { id, name, member } on channel __selfName