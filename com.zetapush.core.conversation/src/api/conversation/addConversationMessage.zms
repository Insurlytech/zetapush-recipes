 *
 */
macroscript addConversationMessage(
	@ValidConversationRoom map room,
	@ValidMessageType string type,
	@NotNull map value,
	@NotNull map metadata
) {
	var { result: { message } } = call core_conversation__addConversationMessage({ room, type, value, metadata }) hardFail;
} broadcast(room.resource) {
	room, message
} on channel __selfName
