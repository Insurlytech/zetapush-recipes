/**
 *
 */
macroscript createOneToOneConversation(
	/** Conversation interlocutor */ @NotNull string interlocutor
) {
	const members = [__userKey, interlocutor];
	const hash = zpRecipeUtils::reduce_array_to_hash(members, TABLE_CONVERSATION_HISTORY) + usr:core_conversation__id();
	const id = str:substr(hash, 0, NUMBER_OF_CHARS_IN_CONVERSATION_ID);
	const name = str:join('.', 'I18N', 'ONE_TO_ONE_CONVERSATION');
	trace(#createOneToOneConversation, { id, name, members });
	/** Create conversation with specific id */
	const { room } = sudo zpRecipeUtils::GLOBAL_OWNER await core_conversation__createConversationByService({ 
		id, name, members, zpService: zpServiceGroups
	});
	trace(#createOneToOneConversation, { room });
} broadcast(room.resource) {
	Room room
} on channel __selfName
