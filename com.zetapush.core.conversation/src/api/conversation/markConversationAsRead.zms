macroscript markConversationAsRead(
	@NotNull string id,
	@NotNull string owner
) {
	/** Load current value */
	var { result } = sudo owner zpServiceGda.get({
		key: id,
		table: HISTORY_TABLE
	});
	/** Substract current value */
	var { data } = sudo owner zpServiceGda.inc({
		column: COLUMN_HISTORY_UNREAD,
		key: id,
		table: HISTORY_TABLE,
		data: 0 - result[COLUMN_HISTORY_UNREAD]
	});
} broadcast(owner) { unread: data } on channel __selfName