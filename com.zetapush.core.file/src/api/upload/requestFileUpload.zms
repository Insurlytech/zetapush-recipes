/**
 *
 */
macroscript requestFileUpload(
	@NotNull string contentType,
	@NotNull string folder,
	string owner
) {
	/** Manage default parameters */
	owner = owner ?: __userKey;
	trace(#requestFileUpload, contentType, folder, owner);
	/** Request file upload */
	var { result: { httpMethod, guid, url } } = call core_filesystem__requestFileUploadByService({ contentType, folder, owner, zpService: zpServiceFile }) hardFail;
} broadcast { 
	httpMethod, guid, url, owner
} on channel __selfName
