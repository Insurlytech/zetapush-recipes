macroscript startCall(
	/** list of users to call (list of user keys) */ @NotNull array recipients,
	/** create a call with audio */ boolean audio = true,
	/** create a call with video */ boolean video = true
) {
} broadcast(recipients) { audio, video, caller: __userKey } on channel __selfName