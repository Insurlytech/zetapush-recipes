macroscript addConversationMarkup(
	/** The conversation identifier */
	@NotNull string id,
	@NotNull string owner,
	/** The message content */
	@NotNull string value
) {
	/** Add attachment to conversation */
	var response = call addConversationMessage({
		id, owner, type: MESSAGE_TYPE_MARKUP, value
	}) hardFail;
	/** Destructure response properties */
	var targets = response.result.targets;
	var message = response.result.message;

} broadcast(targets) { id, message } on channel __selfName
