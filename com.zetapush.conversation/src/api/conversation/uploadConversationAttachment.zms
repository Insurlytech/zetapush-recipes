macroscript uploadConversationAttachment(
	@NotNull string id,
	@NotNull string owner,
	string contentType = null
) {
	/** Get conversation attachments path */
	var path = CONVERSATION_ATTACHMENTS_PATH + id;
	/** Create attachment folder */
	var upload = zpServiceFileSystem.newUploadUrl({ owner, path, contentType });
	/** Destructure response properties */
	var guid = upload.guid;
	var httpMethod = upload.httpMethod;
	var url = upload.url;

} broadcast { guid, httpMethod, owner, url } on channel __selfName
