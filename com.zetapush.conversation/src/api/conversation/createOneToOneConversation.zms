macroscript createOneToOneConversation(
	@NotNull string interlocutor
) {
	var response = null;

	var members = [__userKey, interlocutor];
	var id = zpRecipeUtils::reduce_array_to_hash(members, CONVERSATION_TABLE);
	var name = str:join('.', 'I18N', 'ONE_TO_ONE_CONVERSATION');
	var owner = zpRecipeUtils::GLOBAL_OWNER;

	/** Create conversation */
	response = sudo zpRecipeUtils::GLOBAL_OWNER call createConversation({ id, name, members, owner, groups: [] }) hardFail;
	/** Destructure response properties */
	var details = response.result.details;
	var group = response.result.group;
	var messages = response.result.messages;
	var unread = response.result.unread;

	/** Create conversation */
	response = sudo owner call zpRecipeUtils::getTargets({ id }) hardFail;
	/** Destructure response properties */
	var targets = response.result.value;

} broadcast(targets) { details, group, messages, unread } on channel __selfName
