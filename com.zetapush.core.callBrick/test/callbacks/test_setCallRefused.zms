zms_test test_setCallRefused{
	
	// SETUP
	zms_test_setup {
		zms_test_user anonym = auth({});
		sudo anonym call setCallRefused({id : 'ID_CALL'});
	}
	
	// HANDLER
	zms_add_handler(anonym, callIsRefused, (response,errors) => {
		info(callIsRefused.name, response);

		assert response.result == true "Call state is not 'refused'";
		zms_test_success;
	});
	
	// CALL
	sudo anonym call callIsRefused({id: 'ID_CALL'});
	
}